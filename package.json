{
  "name": "spflash",
  "displayName": "SPFlash",
  "description": "Create and develop SharePoint front-end templates in a flash.",
  "version": "0.0.1",
  "publisher": "spiritous",
  "engines": {
    "vscode": "^1.22.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:spflash.make.master",
    "onCommand:spflash.make.layout"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [{
        "command": "spflash.make.master",
        "title": "SPFlash: Make Master Page"
      },
      {
        "command": "spflash.make.layout",
        "title": "SPFlash: Make Page Layout"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SPFlash Configuration",
      "properties": {
        "spflash.preferredMasterDirs": {
          "type": "array",
          "default": [
            "_catalogs/masterpage",
            "src/master"
          ],
          "description": "These preferred directories will be used if they exist (in order) as the default location for newly created master page files, relative to the current working directory."
        },
        "spflash.preferredLayoutDirs": {
          "type": "array",
          "default": [
            "_catalogs/masterpage",
            "src/layout"
          ],
          "description": "These preferred directories will be used if they exist (in order) as the default location for newly created page layout files, relative to the current working directory."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "fs": "0.0.1-security",
    "handlebars": "^4.0.11",
    "lodash": "^4.17.5",
    "mkdirp": "^0.5.1",
    "path": "^0.12.7",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  }
}
